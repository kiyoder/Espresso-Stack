{
  "installation": {
    "version": "22.1.3"
  },
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "defaultBase": "master",
  "npmScope": "monorepo-app",
  "tasksRunnerOptions": {
    "default": {
      "runner": "nx/tasks-runners/default",
      "options": {
        "cacheableOperations": ["build", "lint", "test", "serve"],
        "parallel": 3
      }
    }
  },
  "implicitDependencies": {},
  "projects": {
    "frontend": "frontend/my-expo-app",
    "backend": "backend/springboot",
    "serve-all": {
      "root": ".",
      "projectType": "application",
      "targets": {
        "serve": {
          "executor": "nx:run-commands",
          "options": {
            "command": "nx serve frontend & nx serve backend",
            "parallel": true
          }
        }
      }
    }
  }
}
